# Environment Configuration for Swagger Documentation

# API Documentation Settings
API_DOCS_ENABLED=true
API_DOCS_USERNAME=admin
API_DOCS_PASSWORD=swagger123

# Swagger UI Customization
SWAGGER_TITLE=AI CV Evaluator API
SWAGGER_DESCRIPTION=Comprehensive API documentation for AI-powered CV evaluation system
SWAGGER_VERSION=1.0.0
SWAGGER_CONTACT_NAME=AI CV Evaluator Team
SWAGGER_CONTACT_EMAIL=support@aicvevaluator.com

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database URLs (for documentation examples)
MONGODB_URL=mongodb://localhost:27017/ai-cv-evaluator
MONGODB_URL_LOCAL=mongodb://localhost:27017/ai-cv-evaluator-local

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,docx

# AI/LLM Configuration
OPENAPI_KEY=your-openai-api-key-here
LLM_MODEL=meta-llama/llama-3.1-8b-instruct:free
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Redis Configuration (for queue management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@aicvevaluator.com

# ChromaDB Configuration
CHROMADB_URL=http://localhost:8000
CHROMADB_COLLECTION=cv_embeddings

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined